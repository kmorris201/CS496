FROM python:3.6
ENV PYTHONNUNBUFFERD 1

RUN set -ex \
    && RUN_DEPS=" \
	libpcre3 \
        mime-support \ 
    " \
    && seq 18 | xargs -I{} mkdir -p /usr/share/man/man{} \
    && apt-get update && apt-get install -y --no-install-recommends $RUN_DEPS \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir /wku_sims
WORKDIR /wku_sims
COPY requirements.txt /wku_sims/

RUN set -ex \
    && BUILD_DEPS=" \
        build-essential \
        libpcre3-dev \
        libpq-dev \ 
        gcc-7 \
	python3-dev \
	gfortran musl-dev g++ \
	libffi-dev libxml2 libxml2-dev \
	libxslt-dev libopenblas-dev \
	libssl-dev libssl1.0 \
	libblas-dev liblapack-dev libatlas-base-dev \
    " \
    && apt-get update && apt-get install -y --no-install-recommends $BUILD_DEPS 
RUN ln -s /usr/include/locale.h /usr/include/xlocale.h

RUN python3 -m venv /venv \
    && /venv/bin/pip install -U pip setuptools wheel 

RUN /venv/bin/pip install Cython==0.27.2 \
    && /venv/bin/pip install --no-cache-dir -r requirements.txt   

RUN /venv/bin/pip install --no-cache-dir numpy==1.10.4 \
    && /venv/bin/pip install --no-cache-dir pandas==0.20.1 \
    && /venv/bin/pip install --no-cache-dir matplotlib==3.1.1
    #\
    #&& apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false $BUILD_DEPS \
    #&& rm -rf /var/lib/apt/lists/* 

#RUN pip install -r requirements.txt
COPY . /wku_sims/

EXPOSE 8000

ENV DJANGO_SETTINGS_MODULE=wku_sims.settings

#RUN DATABASE_URL='db' /venv/bin/python manage.py collectstatic --noinput

ENV UWSGI_WSGI_FILE=/wku_sims/wku_sims/wsgi.py

ENV UWSGI_VIRTUALENV=/venv UWSGI_HTTP=:8000 USGI_MASTER=1 UWSGI_HTTP_AUTO_CHUNKED=1 UWSGI_HTTP_KEEPALIVE=1 UWSGI_UID=1000 UWSGI_GID=2000 UWSGT_LAZY_APPS=3 UWSGI_WSGI_ENV_BEHAVIOR=holy

ENV UWSGI_WORKERS=2 UWSGI_THREADS=4

ENV UWSGI_STATIC_MAP="/static/=/wku_sims/static/"

CMD ["/venv/bin/uwsgi", "--show-config"]

